[settings]
screenchange-reload = true

[bar/base]
monitor = ${env:MONITOR:}
font-0 = "Hack Nerd Font:size=9;2"
width = 100%
height = 20
background = #00000000
foreground = #ebdbb2
wm-restack = bspwm
