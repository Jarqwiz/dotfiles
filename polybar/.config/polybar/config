[settings]
screenchange-reload = true
format-background = #080808
format-foreground = #b2b2b2
format-padding = 1

[bar/base]
monitor = ${env:MONITOR:}
font-0 = InputMonoCondensed Nerd Font:size=9;2
width = 100%
height = 18
offset-x = 0
offset-y = 0
background = #080808
foreground = #b2b2b2
