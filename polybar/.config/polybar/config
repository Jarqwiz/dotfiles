padding = 0
fixed-center = true
tray-padding = 2
tray-maxsize = 16
tray-background = #080808

[bar/primary]
inherit = bar/base
modules-left = bspwm music
modules-center = title
modules-right = cpu memory battery backlight time date volume
tray-position = right
bottom = false

