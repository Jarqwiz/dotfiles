padding = 0
tray-padding = 2
tray-maxsize = 16
tray-background = #282828

[bar/primary]
inherit = bar/base
modules-left = bspwm
modules-center = title
modules-right = time date
bottom = false

[bar/secondary]
inherit = bar/base
modules-left = cpu ram
modules-center = mpd
modules-right = backlight battery volume
tray-position = right
bottom = true

